#include "main.h"

char *cap_string(char *s)
{
	int i, j, k;
	i = 0;
	char set[] = {'\t', ' ', '\n', ',', ';', '.', '!', '?', '"', '(', ')', '{', '}' };

	while (s[i] != '\0')
		i++;

	for (j = 0; j < i; j++)
	{
		if ( (s[j + 1] >= 'a')  && (s[j + 1] < 'z') )
			s[j + 1] = s[j + 1] - 32;
		for (k = 0; k < 13; k++)
		{
			if (s[j] == set[k])
				s[j + 1] = s[j + 1] - 32;
		}
	}
	return (s);

}
